<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title" placeholder="title"
                        required>
                    <div class="valid-feedback">
                        <!-- This gives us the feedback after we finished filling after one submit failed -->
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="campground[location]" id="location"
                        placeholder="location" required>
                    <div class="valid-feedback">
                        <!-- This gives us the feedback after we finished filling after one submit failed -->
                        Looks good!
                    </div>
                </div>

                <div class="mb-3 custom-file">
                    <label for="image" class="form-label">Add Images</label>
                    <label for="image" class="form-label custom-file-label"></label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>

