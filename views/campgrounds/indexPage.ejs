<% layout('layouts/boilerplate') %>

    <div id='cluster-map'></div>  
    <h1>All Campgrounds</h1>
    <ul>
        <% for (let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" 
                        src="<%= campground.images[0]? campground.images[0].showPage : 
                        'https://res.cloudinary.com/dhwbsgmjw/image/upload/v1672714865/YelpCamp/pexels-photo-219972_e6pa8k.jpg' %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <%} %>
    </ul>

    <div class="container d-flex justify-content-center align-items-center ">
        <nav aria-label="...">
            <ul class="pagination flex-wrap">
                <li class="page-item <%= page == 1 ? "disabled" : "" %>">
                    <a class="page-link" href="/campgrounds?page=<%= page-1 %>" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
                <% for (let i = 0; i < pages; i++) { %>
                    <li class="page-item <%= page == i+1 ? "active" : "" %>"><a class="page-link" 
                        href="/campgrounds?page=<%= i+1 %>"><%= i+1 %></a></li>
                <% } %> 
                <li class="page-item <%= page == pages ? "disabled" : "" %>">
                    <a class="page-link" href="/campgrounds?page=<%= page+1 %>">Next</a>
                </li>

