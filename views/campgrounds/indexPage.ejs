<% layout('layouts/boilerplate') %>

    <div id='cluster-map'></div>  
    <h1 class="font-cursive">All Campgrounds</h1>
    <ul>
        <% for (let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid p-2  border-20px" 
                        src="<%= campground.images[0]? campground.images[0].showPage : 
                        'https://res.cloudinary.com/dhwbsgmjw/image/upload/v1672714865/YelpCamp/pexels-photo-219972_e6pa8k.jpg' %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title font-cursive"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <%} %>
    </ul>

    <%- include('../partials/pagination') %> 
    
    <script>
        const campgrounds = { features: <%-JSON.stringify(campgrounds_all)%> };
        const mapboxToken = '<%-process.env.MAPBOX_TOKEN%>';
    </script>
    <script src="/javascripts/clusterMap.js"></script>


    